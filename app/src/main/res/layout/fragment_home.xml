<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image of Cheque"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        />

    <ImageView
        android:id="@+id/frame"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/frame"
        android:scaleType="fitXY"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="0dp"
        />

    <TextureView
        android:layout_below="@+id/header"
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="42dp"
        android:layout_marginBottom="202dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="2dp"/>

    <ImageView
        android:id="@+id/doneImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_round_done_all_24"
        />

    <TextView
        android:id="@+id/doneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/doneImage"
        android:text="Done"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#099E16"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/icon1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/ic_baseline_subdirectory_arrow_left_24"
                />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="-20dp"
                android:text="Origin Bank"
                />

            <Spinner
                android:id="@+id/origin_account"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="-10dp"/>

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/ic_baseline_subdirectory_arrow_right_24"
                />

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="-20dp"
                android:text="Destination Bank"
                />

            <Spinner
                android:id="@+id/destination_account"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="-10dp"/>


            <ImageView
                android:id="@+id/icon3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/ic_baseline_person_pin_24"
                />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="-35dp"
                android:hint="Full Name "
                android:textSize="14sp"
                android:inputType="textPersonName"
                />


            <ImageView
                android:id="@+id/icon4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_baseline_fiber_pin_24"
                />

            <EditText
                android:id="@+id/BVN"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="-35dp"
                android:hint="BVN"
                android:textSize="14sp"
                android:inputType="number"
                />


            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent_text"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="60dp"
                android:text="Next" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:background="@drawable/transparent_text"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:textSize="12sp"
        android:text="Select Image"/>


    <Button
        android:id="@+id/btn_takepicture"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:background="@drawable/transparent_text"
        android:layout_marginBottom="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:textSize="12sp"
        android:text="Take Picture" />





</RelativeLayout>